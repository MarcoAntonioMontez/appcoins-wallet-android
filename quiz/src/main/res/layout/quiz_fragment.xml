<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/title_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="QuizFragment"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text_result"
        android:layout_below="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textSize="24sp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/confirm_button"
        android:layout_below="@+id/optionGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Choose" />

    <TextView
        android:id="@+id/question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="This is a really really really long text, so long in fact that i want and i really want to keep it centered"
        android:textSize="24sp"
        android:paddingLeft="20dp"/>


    <RadioGroup
        android:id="@+id/optionGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/question_text"
        android:layout_marginTop="80dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:gravity="center"
        android:visibility="visible">


        <RadioButton
            android:id="@+id/option1_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/question_text"
            android:layout_centerHorizontal="true"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="Option 1"
            android:textSize="24sp" />


        <RadioButton
            android:id="@+id/option2_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/option1_quiz"
            android:layout_centerHorizontal="true"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="Option 2"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/option3_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/option2_quiz"
            android:layout_centerHorizontal="true"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="Option 3"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/option4_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/option3_quiz"
            android:layout_centerHorizontal="true"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="Option 4"
            android:textSize="24sp"
            tools:ignore="ObsoleteLayoutParam" />


    </RadioGroup>

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_result"
        android:layout_toEndOf="@+id/title_quiz"
        android:text="Next Question"
        android:visibility="invisible" />

</RelativeLayout>