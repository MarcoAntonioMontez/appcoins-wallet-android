<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/app_bar_square"></LinearLayout>

    <ImageView
        android:id="@+id/left_arrow_quiz"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:layout_marginRight="20dp"
        android:fontFamily="sans-serif"
        android:gravity="end"
        android:text="Quiz Challenge"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/question_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/left_arrow_quiz"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.17"
        android:lineSpacingExtra="20sp"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textStyle="normal"
        android:text="Question     01     02     03" />



    <RelativeLayout
        android:id="@+id/question_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/question_index"
        >

        <TextView
            android:id="@+id/question_text_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="4sp"
            android:text="What is asdasd asdadas asds as assafas asa asa as  "

            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/timer_animation"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/question_text_quiz"
            />


    </RelativeLayout>

    <TextView
        android:id="@+id/totalReward"
        android:layout_below="@+id/question_layout"
        android:layout_marginTop="270dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Total Reward"
        android:textSize="24sp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/appc_logo"
        android:layout_below="@+id/question_layout"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/quiz_btn_text_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:elevation="@dimen/normal_margin"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:gravity="center"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="normal|bold"
            android:textColor="#000000"
            android:lineSpacingExtra="2sp"
            android:text="_Blockchain.info"
            />

        <TextView
            android:id="@+id/quiz_btn_text_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:elevation="@dimen/normal_margin"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:gravity="center"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="normal|bold"
            android:textColor="#000000"
            android:lineSpacingExtra="2sp"
            android:text="Blockchain info that fits the entire screenjhk h"
            />

        <TextView
            android:id="@+id/quiz_btn_text_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:elevation="@dimen/normal_margin"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:gravity="center"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="normal|bold"
            android:textColor="#000000"
            android:lineSpacingExtra="2sp"
            android:text="_Blockchain.info"
            />

        <TextView
            android:id="@+id/quiz_btn_text_4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:elevation="@dimen/normal_margin"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:gravity="center"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="normal|bold"
            android:textColor="#000000"
            android:lineSpacingExtra="2sp"
            android:text="_Blockchain.info"
            />



    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="29dp"
        android:fontFamily="sans-serif-medium"
        android:text="Current Prize:"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/cur_prize_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/appc_logo"
        android:fontFamily="sans-serif"
        android:text="0 APPC"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/appc_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="11dp"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/ic_primary_logo"
        />

    <RelativeLayout
        android:id="@+id/timer_out_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="#F0000000">

        <ImageView
            android:id="@+id/timer_out_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_above="@+id/timer_title"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_timer_out"
            />

        <TextView
            android:id="@+id/timer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:textSize="26sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:text="Time´s out"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/sub_title_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timer_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:text="Don’t let the time go out or you will  \n miss the chance of earning more APPC."
            android:visibility="visible"
            />

        <Button
            android:id="@+id/next_timer_btn"
            style="@style/ButtonStyle"
            android:layout_width="172dp"
            android:layout_height="@dimen/button_height"
            android:layout_below="@+id/sub_title_timer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:paddingEnd="@dimen/half_large_margin"
            android:paddingStart="@dimen/half_large_margin"
            android:text="Next"
            android:textAllCaps="true"
            android:visibility="visible"/>


    </RelativeLayout>


</RelativeLayout>