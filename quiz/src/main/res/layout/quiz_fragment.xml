<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/title_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="QuizFragment"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/optionGroup"
        android:layout_centerHorizontal="true"
        android:text="Incorrect Answer"
        android:textSize="24sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/optionGroup"
        android:layout_centerHorizontal="true"
        android:text="Choose" />

    <TextView
        android:id="@+id/question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:paddingLeft="20dp"
        android:text="This is a really really really long text, so long in fact that i want and i really want to keep it centered"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/wheelScore"
        android:layout_below="@+id/question_text"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Wheel: 0.5 Apc"
        android:textSize="24sp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:textColor="@android:color/holo_green_dark"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/quizScore"
        android:layout_below="@+id/wheelScore"
        android:layout_marginTop="160dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Quiz Score: 3 (X)"
        android:textSize="24sp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:textColor="@android:color/holo_green_light"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/totalReward"
        android:layout_below="@+id/question_text"
        android:layout_marginTop="270dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Total Reward"
        android:textSize="24sp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="invisible" />




    <RadioGroup
        android:id="@+id/optionGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/question_text"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:visibility="visible">


        <RadioButton
            android:id="@+id/option1_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/question_text"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Option 1"
            android:textSize="24sp" />


        <RadioButton
            android:id="@+id/option2_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/option1_quiz"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Option 2"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/option3_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/option2_quiz"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Option 3"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/option4_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/option3_quiz"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Option 4"
            android:textSize="24sp"
            tools:ignore="ObsoleteLayoutParam" />


    </RadioGroup>


    <Button
        android:id="@+id/next_frag_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:text="Wheel"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/next_arrow_quiz"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/arrow_forward"
        android:visibility="invisible"/>


</RelativeLayout>