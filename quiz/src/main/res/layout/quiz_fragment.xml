<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_group">
    </LinearLayout>

    <ImageView
        android:id="@+id/left_arrow_quiz"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:layout_marginRight="20dp"
        android:fontFamily="sans-serif"
        android:gravity="end"
        android:text="Quiz Challenge"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/question_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/left_arrow_quiz"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.17"
        android:lineSpacingExtra="20sp"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textStyle="normal"
        android:text="Question     01     02     03" />

    <TextView
        android:id="@+id/question_text_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#ffffff"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="4sp"
        android:text="What is the name of the famous Bitcoin exchange from japan â€¨that collapsed in 2014?"
        />


    <TextView
        android:id="@+id/totalReward"
        android:layout_below="@+id/question_text"
        android:layout_marginTop="270dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Total Reward"
        android:textSize="24sp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/question_text_quiz"
        android:background="@drawable/rectangle">

        <View
            android:id="@+id/line_1_quiz"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:background="@drawable/line"
            android:visibility="visible"/>
        <View
            android:id="@+id/line_2_quiz"
            android:layout_below="@+id/line_1_quiz"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="65dp"
            android:background="@drawable/line"
            android:visibility="visible"/>

        <View
            android:id="@+id/line_3_quiz"
            android:layout_below="@+id/line_2_quiz"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="65dp"
            android:background="@drawable/line"
            android:visibility="visible"/>

        <RelativeLayout
            android:id="@+id/quiz_btn_1"
            android:layout_above="@+id/quiz_btn_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/quiz_btn_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#000000"
                android:lineSpacingExtra="2sp"
                android:gravity="center_horizontal"
                android:text="_Blockchain.info"
                />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/quiz_btn_2"
            android:layout_below="@+id/line_1_quiz"
            android:layout_above="@+id/quiz_btn_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        <TextView
            android:id="@+id/quiz_btn_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#000000"
            android:lineSpacingExtra="2sp"
            android:gravity="center_horizontal"
            android:text="_Tradehill"
            />
    </RelativeLayout>


        <RelativeLayout
            android:id="@+id/quiz_btn_3"
            android:layout_below="@+id/line_2_quiz"
            android:layout_above="@+id/quiz_btn_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/quiz_btn_text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#000000"
                android:lineSpacingExtra="2sp"
                android:gravity="center_horizontal"
                android:text="_MT. Gox"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/quiz_btn_4"
            android:layout_below="@+id/line_3_quiz"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/quiz_btn_text_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#000000"
                android:lineSpacingExtra="2sp"
                android:gravity="center_horizontal"
                android:text="_Bitstamp"
                />
        </RelativeLayout>




    </RelativeLayout>

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_text_quiz"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="20"
        android:textColor="@android:color/holo_green_light"
        android:textSize="20sp"
        android:textStyle="bold" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="29dp"
        android:fontFamily="sans-serif-medium"
        android:text="Current Prize:"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/cur_prize_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/appc_logo"
        android:fontFamily="sans-serif"
        android:text="0 APPC"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/appc_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="11dp"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/ic_primary_logo"
        />


</RelativeLayout>